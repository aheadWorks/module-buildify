<?xml version="1.0" encoding="UTF-8"?>
<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <policy id="style-src">
            <values>
                <value id="bfy_cloudflare_cdn" type="host">cdnjs.cloudflare.com</value>
                <value id="bfy_fonts_googleapis" type="host">fonts.googleapis.com</value>
            </values>
        </policy>
        <policy id="script-src">
            <values>
                <value id="bfd_twitter" type="host">platform.twitter.com</value>
                <value id="bfd_instagram" type="host">platform.instagram.com</value>
                <value id="bfd_apis_google" type="host">apis.google.com</value>
                <value id="bfd_buildify_shop" type="host">magento.buildify.shop</value>
            </values>
        </policy>
        <policy id="font-src">
            <values>
                <value id="bfy_cloudflare_cdn" type="host">cdnjs.cloudflare.com</value>
                <value id="bfy_gstatic" type="host">fonts.gstatic.com</value>
            </values>
        </policy>
        <policy id="img-src">
            <values>
                <value id="bfy_s3_amazonaws" type="host">s3.amazonaws.com</value>
            </values>
        </policy>
        <policy id="frame-src">
            <values>
                <value id="bfd_twitter" type="host">platform.twitter.com</value>
                <value id="bfd_buildify_shop" type="host">magento.buildify.shop</value>
            </values>
        </policy>
        <policy id="form-action">
            <values>
                <value id="bfd_buildify_shop" type="host">magento.buildify.shop</value>
            </values>
        </policy>
        <policy id="style-src">
            <values>
                <value id="bfd_buildify_shop" type="host">magento.buildify.shop</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
